{% extends "./index.html.twig" %}
{% block title %}Joey - Sign up{% endblock %}
{% set classBody = 'sign-up' %}
{% block body %}
    <div class="layout">
        <header class="header-connect"><a href="">Oply</a></header>
        <main>
            <div class="sign-up__main">
                <div class="sign-up__headtitle">
                    <h1 class="title__first">Sign up to Joey</h1>
                    <p class="subtitle">Petite catchline des familles</p>
                </div>

                <form action="" method="post" class="formData">
                    <div class="sign-up__form-body">
                        <div class="field">
                            <label for="" class="label">Email address
                                <i class="tooltip-info icon-tooltip"></i>
                            </label>
                            <div class="input__text-icon">
                                <span class="input__icon">
                                    <i class="icon-mail"></i>
                                </span>
                                <input type="text" name="mail" class="input__text" placeholder="johnidoe@oply.com">
                            </div>
                        </div>
                        <div class="field">
                            <label for="" class="label">Password</label>
                            <div class="input__text-icon">
                                <span class="input__icon"><i class="icon-key"></i></span>
                                <input type="password" name="pwd" class="input__text" placeholder="johnidoe@oply.com">
                            </div>
                        </div>
                        <div class="field">
                            <label for="" class="label">Confirmation of password</label>
                            <div class="input__text-icon">
                                <span class="input__icon">
                                    <i class="icon-key"></i>
                                </span>
                                <input type="password" name="pwd2" class="input__text" placeholder="johnidoe@oply.com">
                            </div>
                        </div>
                    </div>

                    <div class="sign-up__form-footer">
                        <div class="btn__outer">
                            <button value="Sign up" name="sign-up-button" class="btn btn__center">Sign up now</button>
                        </div>
                        <p class="btn__bottom-msg">Already have an account?
                            <a href="/?a=sign-in">Sign in here</a>
                        </p>
                    </div>
                </form>
            </div>
            <img src="https://res.cloudinary.com/dj09xr9gd/image/upload/v1528813897/backgrounds/background-connect.svg" class="sign-up__bg-blue">
            <img src="https://res.cloudinary.com/dj09xr9gd/image/upload/v1528813897/illustrations/illu-connect.png" class="sign-up__bg-connect">
        </main>
    </div>
{% endblock %}
{% block javascript %}
    <script src="web/js/actions.js"></script>
{% endblock %}
